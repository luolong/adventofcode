#!/usr/bin/env rakudo
# vim: syntax=perl6

use lib 'lib';

unit sub MAIN(
  Str $day where ?(* ~~ /day \d+/),       #= solve puzzle for the given day (day1, day2, ..., day24)
  Str $file where *.IO.f = "$day.txt",    #= file name containing this day's puzzle input
);

my $module = $day.tc;
require ::($module);
my &run = ::("{$module}::EXPORT::DEFAULT::&{$day}");
run($file);
